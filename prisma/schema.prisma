generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       String @id @default(uuid())
  username String @unique

  email    String @unique
  password String

  imageUrl String

  followers  Follower[]
  followings Following[]

  articles Article[]

  favoriteArticles FavoriteArticle[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Follower {
  id Int @id @default(autoincrement())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Following {
  id Int @id @default(autoincrement())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Article {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  label       String
  description String
  imagesUrl   ArticleImage[]

  favorite FavoriteArticle[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model ArticleImage {
  id Int @id @default(autoincrement())

  articleId String
  article   Article @relation(fields: [articleId], references: [id])

  imageUrl String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([articleId])
}

model FavoriteArticle {
  id Int @id @default(autoincrement())

  articleId String
  article   Article @relation(fields: [articleId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([articleId])
  @@index([userId])
}
